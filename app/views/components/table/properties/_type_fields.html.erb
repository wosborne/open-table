<%= turbo_frame_tag "property-type-fields-#{property.id}" do %>
  <% case params[:type] || property.type %>
  <% when "linked_record", "Properties::LinkedRecordProperty" %>
    <%= render "components/table/properties/tables", f: %>

  <% when "select", "Properties::SelectProperty" %>
    <%= render "components/table/properties/options", f:, property: %>

  <% when "formula", "Properties::FormulaProperty" %>
    <%= render "components/table/properties/formula", f:, property: %>

  <% when "date", "Properties::DateProperty" %>
    <%= render "components/table/properties/date", f:, property: %>

  <% when "id", "Properties::IdProperty" %>
    <%= render "components/table/properties/id", f:, property: %>
  <% end %>
<% end %>
