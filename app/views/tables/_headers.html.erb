<tr>
  <th class="is-align-content-center">
    <label class="checkbox">
      <input type="checkbox" data-table-target="selectAll" data-action="change->table#toggleAll"/>
    </label>
  </th>

  <% table.properties.includes(:options).order(:position).each_with_index do |property| %>
    <%= render "tables/column_header", property:, icon: "fa-chevron-down" %>
  <% end %>
  
  <th>
    <%= button_to account_table_properties_path(current_account, table), data: { turbo_method: :post }, style: "width: max-content;" do %>
      <span class="icon-text">
        <span class="icon is-clickable">
          <i class="fas fa-plus"></i>
        </span>
        <span>Add Property</span>
      </span>
    <% end %>
  </th>
</tr>