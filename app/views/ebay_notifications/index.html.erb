<% content_for :title, "eBay Notifications Debug" %>

<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold text-gray-900">eBay Notifications</h1>
  <div class="flex space-x-3">
    <%= button_to "Clear All", clear_all_account_ebay_notifications_path(@account), 
        method: :delete, 
        class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md text-sm font-medium",
        confirm: "Are you sure you want to delete all notifications?" %>
  </div>
</div>

<!-- Filters -->
<div class="bg-white shadow-sm rounded-lg border border-gray-200 mb-6">
  <div class="p-4">
    <%= form_with url: account_ebay_notifications_path(@account), method: :get, class: "flex flex-wrap gap-4", data: { turbo_frame: "notifications" } do |form| %>
      <div class="flex-1 min-w-[200px]">
        <%= form.text_field :search, 
            placeholder: "Search XML, Item ID, Transaction ID...", 
            value: params[:search],
            class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>
      
      <div class="min-w-[150px]">
        <%= form.select :notification_type, 
            options_for_select([["All Types", ""]] + @notification_types.map { |type| [type, type] }, params[:notification_type]),
            {},
            { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" } %>
      </div>
      
      <div class="min-w-[120px]">
        <%= form.select :status, 
            options_for_select([["All Statuses", ""]] + @statuses.map { |status| [status.humanize, status] }, params[:status]),
            {},
            { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" } %>
      </div>
      
      <div class="flex space-x-2">
        <%= form.submit "Filter", class: "bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
        <%= link_to "Reset", account_ebay_notifications_path(@account), class: "bg-gray-300 hover:bg-gray-400 text-gray-700 px-4 py-2 rounded-md text-sm font-medium" %>
      </div>
    <% end %>
  </div>
</div>

<!-- Notifications List -->
<%= turbo_frame_tag "notifications" do %>
  <div class="bg-white shadow-sm rounded-lg border border-gray-200">
    <% if @notifications.any? %>
      <div class="divide-y divide-gray-200">
        <% @notifications.each do |notification| %>
          <div class="p-6 hover:bg-gray-50">
            <div class="flex items-center justify-between">
              <div class="flex-1">
                <div class="flex items-center space-x-3">
                  <h3 class="text-lg font-medium text-gray-900">
                    <%= notification.notification_type %>
                  </h3>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                    <%= case notification.status
                        when 'received' then 'bg-blue-100 text-blue-800'
                        when 'processing' then 'bg-yellow-100 text-yellow-800'
                        when 'processed' then 'bg-green-100 text-green-800'
                        when 'failed' then 'bg-red-100 text-red-800'
                        else 'bg-gray-100 text-gray-800'
                        end %>">
                    <%= notification.status.humanize %>
                  </span>
                </div>
                
                <div class="mt-2 grid grid-cols-2 md:grid-cols-4 gap-4 text-sm text-gray-600">
                  <div>
                    <span class="font-medium">Received:</span>
                    <%= notification.created_at.strftime("%m/%d/%Y %I:%M %p") %>
                  </div>
                  
                  <% if notification.ebay_item_id.present? %>
                    <div>
                      <span class="font-medium">Item ID:</span>
                      <%= notification.ebay_item_id %>
                    </div>
                  <% end %>
                  
                  <% if notification.ebay_transaction_id.present? %>
                    <div>
                      <span class="font-medium">Transaction ID:</span>
                      <%= notification.ebay_transaction_id %>
                    </div>
                  <% end %>
                  
                  <div>
                    <span class="font-medium">Method:</span>
                    <%= notification.request_method %>
                  </div>
                </div>
                
                <% if notification.error_message.present? %>
                  <div class="mt-2 p-3 bg-red-50 border border-red-200 rounded-md">
                    <p class="text-sm text-red-800">
                      <span class="font-medium">Error:</span> <%= notification.error_message %>
                    </p>
                  </div>
                <% end %>
                
                <div class="mt-3">
                  <details class="group">
                    <summary class="cursor-pointer text-sm text-indigo-600 hover:text-indigo-900 font-medium">
                      View XML Preview
                    </summary>
                    <div class="mt-2 p-3 bg-gray-50 rounded-md border">
                      <pre class="text-xs text-gray-700 whitespace-pre-wrap break-all"><%= notification.truncated_xml(300) %></pre>
                    </div>
                  </details>
                </div>
              </div>
              
              <div class="flex items-center space-x-3">
                <%= button_to "Delete", 
                    account_ebay_notification_path(@account, notification),
                    method: :delete,
                    class: "bg-red-600 hover:bg-red-700 text-white px-3 py-2 rounded-md text-sm font-medium",
                    confirm: "Are you sure?",
                    form: { class: "inline" } %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      
      <!-- Pagination would go here if using Kaminari -->
      
    <% else %>
      <div class="p-8 text-center">
        <div class="text-gray-400">
          <svg class="mx-auto h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2 2v-5m16 0h-2M4 13h2m0 0V9a2 2 0 012-2h2m0 0V6a2 2 0 012-2h2" />
          </svg>
        </div>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No notifications</h3>
        <p class="mt-1 text-sm text-gray-500">No eBay notifications have been received yet.</p>
      </div>
    <% end %>
  </div>
<% end %>