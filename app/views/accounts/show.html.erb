<% content_for :title, "Account Settings" %>

<div class="mb-5">
  <%= link_to "â† Back", account_dashboard_path(current_account), class: "button is-text" %>
</div>

<h1 class="title">Account Settings</h1>
<h2 class="subtitle"><%= current_account.name %></h2>

<!-- Account Settings -->
<div class="box">
  <div class="level">
    <div class="level-left">
      <div class="level-item">
        <h3 class="title is-4">Account Settings</h3>
      </div>
    </div>
    <div class="level-right">
      <div class="level-item">
        <%= link_to "Edit Account", edit_account_path(current_account), class: "button is-primary" %>
      </div>
    </div>
  </div>
  <div class="content">
    <p><strong>Account Name:</strong> <%= current_account.name %></p>
    <p><strong>Account Slug:</strong> <%= current_account.slug %></p>
    <p><strong>Created:</strong> <%= current_account.created_at.strftime("%B %d, %Y") %></p>
  </div>
</div>

<!-- External Accounts Section -->
<div>
  <h3 class="title is-4">Connected Accounts</h3>
  
  <div class="columns is-multiline">
    <div class="column is-6">
      <div class="card">
        <div class="card-content">
          <div class="media">
            <div class="media-left">
              <span class="icon is-large">
                <i class="fab fa-shopify fa-2x"></i>
              </span>
            </div>
            <div class="media-content">
              <p class="title is-5 mb-1">Shopify</p>
              <% if current_account&.shopify_account&.persisted? %>
                <span class="tag is-info is-light">Connected</span>
              <% else %>
                <span class="tag is-light">Not Connected</span>
              <% end %>
            </div>
          </div>
          <div class="content mt-3">
            <% if current_account&.shopify_account&.persisted?  %>
              <div class="buttons">
                <%= link_to account_external_account_path(current_account, current_account.shopify_account), class: "button is-info is-small" do %>
                  <span class="icon">
                    <i class="fas fa-cog"></i>
                  </span>
                  <span>Manage</span>
                <% end %>
                <%= button_to account_external_account_path(current_account, current_account.shopify_account), method: :delete, data: { turbo_confirm: "Are you sure you want to disconnect your Shopify account?" }, class: "button is-danger is-small" do %>
                  <span class="icon">
                    <i class="fas fa-trash"></i>
                  </span>
                  <span>Disconnect</span>
                <% end %>
              </div>
            <% else %>
              <%= link_to "Connect Shopify", new_account_external_account_path(current_account), class: "button is-primary is-small" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="column is-6">
      <div class="card">
        <div class="card-content">
          <div class="media">
            <div class="media-left">
              <span class="icon is-large">
                <i class="fab fa-ebay fa-2x"></i>
              </span>
            </div>
            <div class="media-content">
              <p class="title is-5 mb-1">eBay</p>
              <% if current_account&.ebay_account&.persisted? %>
                <span class="tag is-info is-light">Connected</span>
                <% if current_account.ebay_account.ebay_username.present? %>
                  <p class="has-text-grey is-size-7 mt-1">@<%= current_account.ebay_account.ebay_username %></p>
                <% elsif current_account.ebay_account.ebay_display_name.present? %>
                  <p class="has-text-grey is-size-7 mt-1"><%= current_account.ebay_account.ebay_display_name %></p>
                <% end %>
              <% else %>
                <span class="tag is-light">Not Connected</span>
              <% end %>
            </div>
          </div>
          <div class="content mt-3">
            <% if current_account&.ebay_account&.persisted?  %>
              <div class="buttons">
                <%= link_to account_external_account_path(current_account, current_account.ebay_account), class: "button is-info is-small" do %>
                  <span class="icon">
                    <i class="fas fa-cog"></i>
                  </span>
                  <span>Manage</span>
                <% end %>
                <%= button_to account_external_account_path(current_account, current_account.ebay_account), method: :delete, data: { turbo_confirm: "Are you sure you want to disconnect your eBay account?" }, class: "button is-danger is-small" do %>
                  <span class="icon">
                    <i class="fas fa-trash"></i>
                  </span>
                  <span>Disconnect</span>
                <% end %>
              </div>
            <% else %>
              <%= link_to "Connect eBay", new_account_external_account_path(current_account, service: "ebay"), class: "button is-primary is-small" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="column is-6">
      <div class="card">
        <div class="card-content">
          <div class="media">
            <div class="media-left">
              <span class="icon is-large">
                <i class="fab fa-google fa-2x"></i>
              </span>
            </div>
            <div class="media-content">
              <p class="title is-5 mb-1">Gmail</p>
              <% if current_account.gmail_connected? %>
                <span class="tag is-success is-light">Connected</span>
                <% if current_account.gmail.email.present? %>
                  <p class="has-text-grey is-size-7 mt-1"><%= current_account.gmail.email %></p>
                <% end %>
              <% else %>
                <span class="tag is-light">Not Connected</span>
              <% end %>
            </div>
          </div>
          <div class="content mt-3">
            <% if current_account.gmail_connected? %>
              <div class="buttons">
                <%= link_to account_gmail_path(current_account), class: "button is-info is-small", data: { turbo_frame: "_top" } do %>
                  <span class="icon">
                    <i class="fas fa-cog"></i>
                  </span>
                  <span>Manage</span>
                <% end %>
                <%= button_to account_gmail_path(current_account), method: :delete, data: { turbo_confirm: "Are you sure you want to disconnect your Gmail account?", turbo_frame: "_top" }, class: "button is-danger is-small" do %>
                  <span class="icon">
                    <i class="fas fa-trash"></i>
                  </span>
                  <span>Disconnect</span>
                <% end %>
              </div>
            <% else %>
              <%= link_to "Connect Gmail", connect_account_gmail_path(current_account), class: "button is-primary is-small", data: { turbo_frame: "_top" } %>
            <% end %>
            <p class="has-text-grey is-size-7 mt-2">
              Send emails from your Gmail account through the platform
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
