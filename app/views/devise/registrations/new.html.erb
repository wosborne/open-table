
<h1 class="title">Sign up</h1>
<p class="subtitle">Create a new account to start flipping phones!</p>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "/components/form/input_wrapper",
    label: f.label(:email, class: "label"),
    input: f.email_field(:email, autofocus: true, autocomplete: "email", class: "input"),
    errors: resource.errors.full_messages_for(:email) %>

  <%= render "/components/form/input_wrapper",
    label: f.label(:password, class: "label"),
    input: f.password_field(:password, autocomplete: "new-password", class: "input"),
    errors: resource.errors.full_messages_for(:password) %>

  <%= render "/components/form/input_wrapper",
    label: f.label(:password_confirmation, class: "label"),
    input: f.password_field(:password_confirmation, autocomplete: "new-password", class: "input"),
    errors: resource.errors.full_messages_for(:password_confirmation) %>

  <div class="is-flex is-flex-direction-column is-align-items-center">
    <%= f.submit "Sign up", class: "button is-primary" %>
    <br />
    <%= render "devise/shared/links" %>
  </div>
<% end %>
