<div class="container">
  <h1 class="title">Inventory Unit Details</h1>
  
  <div class="columns">
    <div class="column is-two-thirds">
      <div class="box">
        <div class="field">
          <label class="label">Serial Number</label>
          <p class="content"><%= @inventory_unit.serial_number %></p>
        </div>
        
        <div class="field">
          <label class="label">Status</label>
          <span class="tag is-<%= @inventory_unit.status == 'in_stock' ? 'success' : @inventory_unit.status == 'sold' ? 'danger' : 'warning' %>">
            <%= @inventory_unit.status.humanize %>
          </span>
        </div>
        
        <div class="field">
          <label class="label">Variant SKU</label>
          <p class="content"><%= @inventory_unit.variant&.sku %></p>
        </div>
        
        <div class="field">
          <label class="label">Product</label>
          <p class="content"><%= @inventory_unit.variant&.product&.name %></p>
        </div>
        
        <% if @inventory_unit.location.present? %>
          <div class="field">
            <label class="label">Storage Location</label>
            <p class="content">
              <%= link_to @inventory_unit.location.name, account_location_path(current_account, @inventory_unit.location), class: "is-link" %>
            </p>
          </div>
        <% end %>
      </div>
      
      <%= render 'ebay_marketplace', inventory_unit: @inventory_unit %>
      
      <div class="buttons">
        <%= link_to "Edit", edit_account_inventory_unit_path(current_account, @inventory_unit), class: "button is-primary" %>
        <%= link_to "Back to Inventory Units", account_inventory_units_path(current_account), class: "button" %>
      </div>
    </div>
    
    <div class="column is-one-third">
      <% if @inventory_unit.images.any? %>
        <div class="box">
          <h2 class="subtitle">Images</h2>
          <% @inventory_unit.images.each_with_index do |image, index| %>
            <div class="image-container mb-4">
              <figure class="image is-square">
                <%= image_tag image, class: "is-fullwidth", style: "object-fit: cover;" %>
              </figure>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="box has-text-centered">
          <p class="has-text-grey">No images uploaded</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
