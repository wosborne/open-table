<h1 class="title">Inventory Units</h1>

<%= render "components/model_filters", 
    path: account_inventory_units_path(current_account), 
    model_class: InventoryUnit,
    model_name: "inventory unit",
    searchable_attributes: InventoryUnit::SEARCHABLE_ATTRIBUTES %>

<div class="field is-grouped is-grouped-right">
  <p class="control">
    <%= link_to new_account_inventory_unit_path(current_account), class: "button is-fullwidth-mobile" do %>
      <span class="icon-text">
        <span class="icon">
          <i class="fas fa-plus"></i>
        </span>
        <span>New Inventory Unit</span>
      </span>
    <% end %>
  </p>
</div>

<%= turbo_frame_tag "inventory_units", class: "is-flex is-flex-direction-column is-flex-grow-1" do %>
  <%= render TableGridComponent.new(resources: @inventory_units, current_account: current_account) %>
<% end %>
