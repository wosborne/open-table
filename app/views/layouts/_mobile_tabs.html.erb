<!-- Floating button bar for mobile -->
<div class="is-hidden-tablet" style="position: fixed; bottom: 1rem; left: 0; z-index: 1000; width: 100%; pointer-events: none;">
  <div class="buttons has-addons is-centered" style="pointer-events: auto;">
    <%= link_to account_dashboard_path(current_account), class: "button is-rounded #{'is-link is-selected' if current_page?(account_dashboard_path(current_account))}" do %>
      <span class="icon m-0"><i class="fas fa-tachometer-alt"></i></span>
    <% end %>
    <%= link_to account_products_path(current_account), class: "button is-rounded #{'is-link is-selected' if current_page?(account_products_path(current_account))}" do %>
      <span class="icon m-0"><i class="fas fa-box"></i></span>
    <% end %>
    <%= link_to account_variants_path(current_account), class: "button is-rounded #{'is-link is-selected' if current_page?(account_variants_path(current_account))}" do %>
      <span class="icon m-0"><i class="fas fa-layer-group"></i></span>
    <% end %>
    <%= link_to account_inventory_units_path(current_account), class: "button is-rounded #{'is-link is-selected' if current_page?(account_inventory_units_path(current_account))}" do %>
      <span class="icon m-0"><i class="fas fa-warehouse"></i></span>
    <% end %>
    <%= link_to account_orders_path(current_account), class: "button is-rounded #{'is-link is-selected' if current_page?(account_orders_path(current_account))}" do %>
      <span class="icon m-0"><i class="fas fa-shopping-cart"></i></span>
    <% end %>
  </div>
</div>