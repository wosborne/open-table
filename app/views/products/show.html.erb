<section class="section is-flex is-flex-direction-column" style="height: 100%">
  <div class="container is-max-tablet">
    
    <div class="level">
      <div class="level-left">
        <div class="level-item">
          <h1 class="title"><%= @product.name %></h1>
        </div>
      </div>
      
      <div class="level-right">
        <div class="level-item">
          <%= link_to edit_account_product_path(current_account, @product), class: "button is-primary" do %>
            <span class="icon-text">
              <span class="icon">
                <i class="fas fa-edit"></i>
              </span>
              <span>Edit Product</span>
            </span>
          <% end %>
        </div>
      </div>
    </div>

    <div class="columns">
      <div class="column">
        <div class="card">
          <div class="card-header">
            <p class="card-header-title">Product Details</p>
          </div>
          <div class="card-content">
            <div class="content">
              <div class="field">
                <label class="label">Name</label>
                <p><%= @product.name %></p>
              </div>

              <div class="field">
                <label class="label">Description</label>
                <% if @product.description.present? %>
                  <p><%= @product.description %></p>
                <% else %>
                  <p class="has-text-grey-light">No description provided</p>
                <% end %>
              </div>

              <div class="field">
                <label class="label">In Stock</label>
                <p><%= @product.in_stock %> units</p>
              </div>

              <div class="field">
                <label class="label">Created</label>
                <p><%= @product.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
              </div>

              <div class="field">
                <label class="label">Last Updated</label>
                <p><%= @product.updated_at.strftime("%B %d, %Y at %I:%M %p") %></p>
              </div>
            </div>
          </div>
        </div>

        <% if @product.ebay_aspects&.any? %>
          <div class="card mt-4">
            <div class="card-header">
              <p class="card-header-title">eBay Aspects</p>
            </div>
            <div class="card-content">
              <div class="content">
                <% @product.ebay_aspects.each do |aspect_name, aspect_value| %>
                  <div class="field">
                    <label class="label"><%= aspect_name %></label>
                    <p><%= aspect_value %></p>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>

        <% if @product.ebay_category_id.present? %>
          <div class="card mt-4">
            <div class="card-header">
              <p class="card-header-title">eBay Category</p>
            </div>
            <div class="card-content">
              <div class="content">
                <div class="field">
                  <label class="label">Category ID</label>
                  <p><%= @product.ebay_category_id %></p>
                </div>
                <% if @product.ebay_category_name.present? %>
                  <div class="field">
                    <label class="label">Category Name</label>
                    <p><%= @product.ebay_category_name %></p>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>

        <% if @product.product_options.any? %>
          <div class="card mt-4">
            <div class="card-header">
              <p class="card-header-title">Options</p>
            </div>
            <div class="card-content">
              <div class="content">
                <% @product.product_options.each do |option| %>
                  <div class="field">
                    <label class="label"><%= option.name %></label>
                    <div class="tags">
                      <% option.product_option_values.each do |value| %>
                        <span class="tag"><%= value.value %></span>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>

        <% if @product.variants.any? %>
          <div class="card mt-4">
            <div class="card-header">
              <p class="card-header-title">Variants</p>
            </div>
            <div class="card-content">
              <div class="table-container">
                <table class="table is-fullwidth">
                  <thead>
                    <tr>
                      <th>SKU</th>
                      <th>Price</th>
                      <% @product.product_options.each do |option| %>
                        <th><%= option.name %></th>
                      <% end %>
                    </tr>
                  </thead>
                  <tbody>
                    <% @product.variants.each do |variant| %>
                      <tr>
                        <td><%= variant.sku %></td>
                        <td>$<%= variant.price %></td>
                        <% @product.product_options.each do |option| %>
                          <td>
                            <% vov = variant.variant_option_values.find { |v| v.product_option_id == option.id } %>
                            <%= vov&.product_option_value&.value %>
                          </td>
                        <% end %>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</section>